<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentProfile">


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@drawable/layoutbg1"

        android:elevation="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.37">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_baseline_person_24_blue"
                android:ems="10"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/ic_baseline_email_24_blue"
                android:ems="10"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="40dp"
                android:drawableStart="@drawable/ic_baseline_phone_android_24_blue"
                android:ems="10"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <Button
                android:id="@+id/buttonProfileContacts"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/theftbtn"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingLeft="10dp"
                android:text="EMERGENCY CONTACTS"
                android:textColor="@color/white"
                android:textSize="18sp"

                />

            <Button
                android:id="@+id/logout"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/theftbtn"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:paddingLeft="10dp"
                android:text="LOG OUT"
                android:textColor="@color/white"
                android:textSize="18sp"

                />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE PAGE"
        android:textColor="#3F51B5"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />


</androidx.constraintlayout.widget.ConstraintLayout>